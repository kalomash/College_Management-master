<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#EF9A9A">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="100dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:startColor="#43A047"
                android:centerColor="#43A047"
                android:endColor="#43A047"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="2dp"
                android:color="#1B5E20"
                />

        </shape>




    </item>
</ripple>